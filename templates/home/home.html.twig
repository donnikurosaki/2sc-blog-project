{% extends 'base.html.twig' %}

{% block title %} Accueil {% endblock %}


{% block body %}
    <div class="container-fluid banner justify-content-center w-100">
        <div class="col-2 mx-auto" id="part1">
            <img alt="logo2cs" width="100px" height="100px" src="{{ asset('images/logo/bigLogo2cs.svg') }}">
        </div>
        <div class="col-4" id="part2">
            <h2> Blog 2CS </h2>
            <p> Sur cette page vous pouvez retrouvez tout les articles et les derniers postes que nous publions. </p>
        </div>
        <div class="col-6" id="part3">
            <img alt="connected_girl" src="{{ asset('images/illustrations/home_illustration.svg') }}">
        </div>
    </div>
    <section class="articles-latest">
        <article>
            <div class="article-heading">
                <h3> {{ latest_article.titre }} </h3>
                <p class="text-secondary"> {{ latest_article.description }} </p>
            </div>
            <div class="article-presentation bg-image" style="background-image: url('{{ asset('images/upload_article_image/' ~ latest_article.getImage() ) }}');">
                
                <!-- <img src="{{ asset('images/upload_article_image/' ~ latest_article.getImage() ) }}" alt="article image"> -->
                <button> Lire l'article </button>
            </div>
        </article>

    </section>
    <hr>
    <section class="all-articles">
        <div class="container-article">
            {% for article in articles %}
                <article class="articles-item">
                    <h5> {{ article.titre }} </h5>
                    <p>{{ article.description }}</p>
                </article>
            {% endfor %}
        </div>
    </section>

{% endblock %}
